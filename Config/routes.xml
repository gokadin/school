<?xml version="1.0" encoding="iso-8859-1" ?>
<routes>
    <application name="Frontend">
        <!-- INDEX MODULE -->
        <route url="/School/" method="GET" module="Index" action="index" />
        <!-- ACCOUNT MODULE -->
        <route url="/School/account/login" method="GET" module="Account" action="index" />
        <route url="/School/account/login" method="POST" module="Account" action="login" />
        <route url="/School/account/logout" method="GET" module="Account" action="logout" />
        <route url="/School/account/signup" method="GET" module="Account" action="signUp" />
        <route url="/School/account/signup" method="POST" module="Account" action="registerUser" />
    </application>

    <application name="School">
        <!-- COMMON INDEX MODULE -->
        <route url="/School/school/" method="GET" module="Common/Index" action="index" />

        <!-- TEACHER INDEX MODULE -->
        <route url="/School/school/teacher/" method="GET" module="Teacher/Index" action="index" />
        <!-- TEACHER ACTIVITY MODULE -->
        <route url="/School/school/teacher/activities" method="GET" module="Teacher/Activity" action="index" />
        <route url="/School/school/teacher/activities/create" method="GET" module="Teacher/Activity" action="create" />
        <route url="/School/school/teacher/activities/create" method="POST" module="Teacher/Activity" action="store" />
        <route url="/School/school/teacher/activities/edit" method="PUT" module="Teacher/Activity" action="update" />
        <route url="/School/school/teacher/activities/delete" method="DELETE" module="Teacher/Activity" action="destroy" />
        <!-- TEACHER STUDENT MODULE -->
        <route url="/School/school/teacher/students" method="GET" module="Teacher/Student" action="index" />
        <route url="/School/school/teacher/students/create" method="GET" module="Teacher/Student" action="create" />
        <route url="/School/school/teacher/students/create" method="POST" module="Teacher/Student" action="store" />
        <route url="/School/school/teacher/students/edit/{0}" method="GET" module="Teacher/Student" action="edit" vars="studentId" />
        <route url="/School/school/teacher/students/edit" method="PUT" module="Teacher/Student" action="update" />
        <route url="/School/school/teacher/students/delete" method="DELETE" module="Teacher/Student" action="destroy" />
        <!-- TEACHER AJAX MODULE -->
        <route url="/School/school/teacher/ajax/email-exists" method="POST" module="Teacher/Ajax" action="emailExists" />

        <!-- STUDENT INDEX MODULE -->
        <route url="/School/school/student/" method="GET" module="Student/Index" action="index" />
    </application>

    <application name="Backend">
        <!-- INDEX MODULE -->
        <route url="/School/admin/" method="GET" module="Index" action="index" />
    </application>
</routes>