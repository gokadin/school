

<?php viewFactoryStartSection('content'); ?>

<?php use \Library\Facades\Form; ?>

<div class="login">

    <?php echo  Form::open('', 'POST', ['id' => 'login-form', 'class' => 'custom-1']) ; ?>

    <div class="g-form-header">
